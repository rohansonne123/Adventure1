<% layout("./layout/boilerplate.ejs")%>
<body>
    
    <form method="POST" action="/listing/<%=id%>/rooms" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-4 offset-sm-1 col-md-10 offset-md-1 col-lg-6 offset-lg-3">
                <h3><b>Add a new Room here</b></h3>
                <div class="mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" placeholder="add a title here" class="form-control" name="listing[title]" >
                    <div class="valid-feedback">Looks good</div>
                </div>
        
                <div class="mt-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]"  class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
        
                <div class="mt-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" placeholder="add image link here" multiple class="form-control" name="image" >
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mt-3">
                    <label for="insta" class="form-label">Instagram Link</label>
                    <textarea name="listing[insta]"  class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mt-3">
                    <label for="youtube" class="form-label">Youtube Link</label>
                    <textarea name="listing[youtube]"  class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mt-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number"  placeholder="1200" name="listing[price]" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
        
                <div class="mt-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text"  placeholder="Pune" class="form-control" name="listing[location]" required>
                    <div class="invalid-feedback">Enter info</div>
                </div>
        
                <div class="mt-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text"  placeholder="India" class="form-control"  name="listing[country]" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
                
                <button class=" mt-3 mb-3 btn btn-dark add-btn">ADD</button>
            </div>
        </div>
        
    </form>
</body>
